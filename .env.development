# Configuration Serveur
NODE_ENV=development
PORT=3000
API_PREFIX=/api/v1

# Base de Données
MONGODB_URI=mongodb://localhost:27017/chicha_store_dev
MONGODB_TEST_URI=mongodb://localhost:27017/chicha_store_test

# Authentification
JWT_SECRET=dev_secret_key_super_long_and_complex
JWT_EXPIRATION=7d
REFRESH_TOKEN_SECRET=dev_refresh_secret_key

# Services Externes
STRIPE_SECRET_KEY=sk_test_your_stripe_test_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key

# Firebase
FIREBASE_API_KEY=your_firebase_dev_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=sender_id
FIREBASE_APP_ID=app_id

# Email
EMAIL_SERVICE=SendGrid
SENDGRID_API_KEY=your_sendgrid_dev_api_key
SUPPORT_EMAIL=support@chicha-store.dev

# Plateformes Publicitaires
GOOGLE_ADS_CLIENT_ID=dev_google_ads_client_id
GOOGLE_ADS_CLIENT_SECRET=dev_google_ads_client_secret
FACEBOOK_ADS_ACCESS_TOKEN=dev_facebook_ads_access_token

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=dev_redis_password

# Sécurité
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=15*60*1000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
SENTRY_DSN=https://1234abcd@sentry.io/1234567

# Feature Flags
ENABLE_BETA_FEATURES=true
ENABLE_ANALYTICS=false
