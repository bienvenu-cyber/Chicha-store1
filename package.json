{
  "name": "chicha-store",
  "version": "1.0.0",
  "description": "Application de vente de chichas et accessoires",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "start:dev": "nodemon backend/server.js",
    "frontend": "cd frontend && npm start",
    "backend": "cd backend && npm start",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "dev": "concurrently \"npm run backend\" \"npm run frontend\"",
    "build": "cd frontend && npm run build",
    "test": "jest",
    "lint": "eslint .",
    "seed:products": "node backend/scripts/seedProducts.js"
  },
  "keywords": ["chicha", "narguil√©", "e-commerce"],
  "author": "Bienvenu RABE",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^6.10.0",
    "dotenv": "^16.0.3",
    "cors": "^2.8.5",
    "helmet": "^6.1.5",
    "jsonwebtoken": "^9.0.0",
    "bcrypt": "^5.1.0",
    "nodemailer": "^6.9.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "jest": "^29.5.0",
    "eslint": "^8.38.0",
    "concurrently": "^8.0.1"
  }
}
