# Configuration Serveur
NODE_ENV=production
PORT=8080
API_PREFIX=/api/v1

# Base de Données
MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/chicha_store?retryWrites=true&w=majority
MONGODB_OPTIONS={"useNewUrlParser":true,"useUnifiedTopology":true,"ssl":true}

# Authentification
JWT_SECRET=generez_un_secret_tres_long_et_complexe_avec_des_caracteres_speciaux
JWT_EXPIRATION=30d
REFRESH_TOKEN_SECRET=un_autre_secret_tres_complexe_et_unique

# Services de Paiement
STRIPE_SECRET_KEY=sk_live_votre_cle_stripe_de_production
STRIPE_PUBLISHABLE_KEY=pk_live_votre_cle_stripe_publique
STRIPE_WEBHOOK_SECRET=votre_secret_webhook_stripe

PAYPAL_MODE=live
PAYPAL_CLIENT_ID=votre_client_id_paypal_production
PAYPAL_CLIENT_SECRET=votre_client_secret_paypal_production

# Services Externes
FIREBASE_API_KEY=votre_cle_api_firebase_production
FIREBASE_AUTH_DOMAIN=votre-projet-production.firebaseapp.com
FIREBASE_PROJECT_ID=votre-projet-production
FIREBASE_STORAGE_BUCKET=votre-projet-production.appspot.com
FIREBASE_MESSAGING_SENDER_ID=sender_id_production
FIREBASE_APP_ID=app_id_production

# Email et Notifications
EMAIL_SERVICE=SendGrid
SENDGRID_API_KEY=votre_cle_api_sendgrid_production
SUPPORT_EMAIL=support@chicha-store.com
NOREPLY_EMAIL=noreply@chicha-store.com

# Plateformes Publicitaires
GOOGLE_ADS_CLIENT_ID=votre_client_id_google_ads_production
GOOGLE_ADS_CLIENT_SECRET=votre_client_secret_google_ads_production
FACEBOOK_ADS_ACCESS_TOKEN=votre_token_acces_facebook_ads_production

# Redis pour Cache et Sessions
REDIS_HOST=votre-redis-production.com
REDIS_PORT=6379
REDIS_PASSWORD=mot_de_passe_redis_production

# Configuration CORS et Sécurité
CORS_ORIGIN=https://chicha-store.com
FRONTEND_URL=https://chicha-store.com
BACKEND_URL=https://api.chicha-store.com
ALLOWED_ORIGINS=https://chicha-store.com,https://www.chicha-store.com

# Limites de Requêtes
RATE_LIMIT_WINDOW_MS=15*60*1000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring et Logging
SENTRY_DSN=votre_dsn_sentry_production
DATADOG_API_KEY=votre_cle_api_datadog

# Configurations Avancées
LOG_LEVEL=error
ENABLE_ANALYTICS=true
ENABLE_BETA_FEATURES=false

# Clés de Chiffrement
ENCRYPTION_KEY=cle_de_chiffrement_tres_complexe
SALT_ROUNDS=12

# Intégrations Tierces
ALGOLIA_APP_ID=votre_app_id_algolia
ALGOLIA_API_KEY=votre_cle_api_algolia

# Feature Flags
FF_NEW_SUBSCRIPTION_MODEL=true
FF_ADVANCED_PERSONALIZATION=false
