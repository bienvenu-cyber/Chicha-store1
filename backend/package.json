{
  "name": "chicha-store-backend",
  "version": "1.0.0",
  "description": "Backend for Chicha Store",
  "type": "module",
  "main": "server.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "preinstall": "npm install mongodb@5.9.0",
    "install": "npm install",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "build": "babel src --out-dir dist",
    "lint": "eslint .",
    "format": "prettier --write .",
    "migrate": "node scripts/migrate.js",
    "monitor": "node scripts/system-monitor.js"
  },
  "imports": {
    "#routes/*": "./routes/*.js",
    "#services/*": "./services/*.js",
    "#middleware/*": "./middleware/*.js",
    "#models/*": "./models/*.js"
  },
  "dependencies": {
    "@sentry/node": "^7.x",
    "@sentry/profiling-node": "^1.x",
    "bcrypt": "^5.1.1",
    "cors": "2.8.5",
    "dotenv": "^16.x",
    "express": "^4.18.2",
    "helmet": "7.1.0",
    "jsonwebtoken": "^9.0.0",
    "mongodb": "^5.9.0",
    "mongoose": "^7.3.1",
    "winston": "^3.x",
    "winston-daily-rotate-file": "^4.x"
  },
  "devDependencies": {
    "@babel/cli": "^7.x",
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "babel-jest": "^29.6.1",
    "babel-node": "^0.0.1-security",
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.x",
    "prettier": "^3.0.0"
  },
  "jest": {
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
